# ===================================
# HSM TECH BOT v3.0 - Configuration
# ===================================

# Bot Basic Settings
BOT_NAME=HSM Tech Bot
BOT_PREFIX=!
BOT_OWNER=Admin
BOT_VERSION=3.0.0

# Feature Toggles (true/false)
FEATURE_BOT_ENABLED=true
FEATURE_AUTO_REPLY=true
FEATURE_FILE_SHARING=true
FEATURE_EMAIL_REPORTS=true
FEATURE_WELCOME_MESSAGE=true
FEATURE_GROUP_ONLY=false

# Email Configuration (Gmail)
# Generate App Password: https://myaccount.google.com/apppasswords
EMAIL_ENABLED=true
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-char-app-password
EMAIL_RECIPIENT=your-email@gmail.com
EMAIL_REPORT_TIME=09:00

# Security Settings
MAX_MESSAGES_PER_MINUTE=20
MAX_MESSAGE_LENGTH=2000
BLOCKED_USERS=
# Example: BLOCKED_USERS=923001234567,923007654321

# Admin Settings (comma-separated phone numbers with country code)
# Example: 923001234567,923007654321
ADMIN_NUMBERS=923001234567

# Group Whitelist (leave empty to allow all groups)
# Example: GROUP_WHITELIST=120363123456789012@g.us,120363987654321098@g.us
GROUP_WHITELIST=

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_RETENTION_DAYS=7

# Contact Information
CONTACT_EMAIL=support@hsmtech.com
CONTACT_PHONE=+92 300 1234567
CONTACT_WEBSITE=https://hsmtech.com

# Paid Services
PAID_SERVICES_INFO=Visit our website for premium services and pricing

# Environment
NODE_ENV=production
